{{>layout/header}}
    <div class="row">
        <div class="col text-primary">
            스프링부트 게시판
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button class="btn btn-primary" onclick="location.href='/posts/printWrite' "> <!-- layout/posts-print-write.mustache -->
                <span class="material-icons">edit</span> 글쓰기
            </button>
        </div>
    </div>

    <!-- 번호, 제목, 작성자, 수정일   -->

    <div class="row">
        <div class="col-1 colLine">번호</div>
        <div class="col-6 colLine">제목</div>
        <div class="col-2 colLine">작성자</div>
        <div class="col colLine">수정일</div>
    </div>

    {{#posts}}
        <div class="row">
            <div class="col-1 colLine">{{id}}</div>
            <div class="col-6 colLine ellipsis"><a>{{title}}</a></div>
            <div class="col-2 colLine">{{author}}</div>
            <div class="col colLine ellipsis">{{modifiedDate}}</div>
        </div>
    {{/posts}}


{{>layout/footer}}
